    <!-- Interactive Scripts -->
    <script>
        // Language Data
        const langs = ['cn', 'en', 'jp'];

        function switchLang(selectedLang) {
            // Update UI content
            langs.forEach(lang => {
                const elements = document.querySelectorAll(`[data-lang="${lang}"]`);
                elements.forEach(el => {
                    if (lang === selectedLang) {
                        el.classList.remove('lang-hidden');
                        el.classList.add('animate-fade-in');
                    } else {
                        el.classList.add('lang-hidden');
                        el.classList.remove('animate-fade-in');
                    }
                });
            });

            // Update button label
            const labelMap = { 'cn': 'CN', 'en': 'EN', 'jp': 'JP' };
            document.getElementById('current-lang-label').textContent = labelMap[selectedLang];

            // Save preference
            localStorage.setItem('preferred-lang', selectedLang);
        }

        // Theme Toggle
        function toggleTheme() {
            const html = document.documentElement;
            const icon = document.getElementById('theme-icon');
            
            if (html.classList.contains('dark')) {
                html.classList.remove('dark');
                html.classList.add('light');
                document.body.classList.replace('bg-brand-dark', 'light-mode-bg');
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
                localStorage.setItem('theme', 'light');
            } else {
                html.classList.remove('light');
                html.classList.add('dark');
                document.body.classList.replace('light-mode-bg', 'bg-brand-dark');
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
                localStorage.setItem('theme', 'dark');
            }
        }

        // Initialization
        document.addEventListener('DOMContentLoaded', () => {
            // Check Theme
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'light') {
                toggleTheme(); // Switch to light since default is dark in HTML
            }

            // Check Language
            const savedLang = localStorage.getItem('preferred-lang') || 'cn';
            switchLang(savedLang);
        });
    </script>
</body>
</html>
